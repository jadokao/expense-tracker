<div class="container w-25">
  <div class="title d-flex">
    <p>*必填欄位</p>
    <p class="mx-auto">請修改你的支出</p>
  </div>
  <form action="/records/{{ record._id }}?_method=PUT" method="POST">
    <div class="form-group d-flex justify-content-center">
      <label for="name">名稱*：</label>
      <input type="text" class="form-control w-50" id="name" aria-describedby="emailHelp" name="name" required
        value="{{ record.name }}">
    </div>
    <div class="form-group d-flex  justify-content-center">
      <label for="date">日期*：</label>
      <input type="date" class="form-control w-50" id="date" name='date' required value="{{ dateFormate record.date }}">
    </div>
    <div class="form-group d-flex  justify-content-center">
      <label for="category">類別*：</label>
      <select class="custom-select w-50" name='category' required>
        <option selected value="">選擇您的支出類別</option>
        <option value="家居物業" {{#if (eq record.category '家居物業' )}}selected{{/if}}>家居物業</option>
        <option value="交通出行" {{#if (eq record.category '交通出行' )}}selected{{/if}}>交通出行</option>
        <option value="休閒娛樂" {{#if (eq record.category '休閒娛樂' )}}selected{{/if}}>休閒娛樂</option>
        <option value="餐飲食品" {{#if (eq record.category '餐飲食品' )}}selected{{/if}}>餐飲食品</option>
        <option value="其他" {{#if (eq record.category '其他' )}}selected{{/if}}>其他</option>
      </select>
    </div>
    <div class="form-group d-flex  justify-content-center">
      <label for="amount">金額*：</label>
      <input type="number" class="form-control w-50" id="amount" name="amount" required min="0"
        value="{{ record.amount }}">
    </div>
    <div class=" d-flex  justify-content-center">
      <button type="submit" class="btn btn-outline-primary">修改支出</button>
    </div>
  </form>
</div>